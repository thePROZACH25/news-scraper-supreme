<div class="row">
    <h3 class="card">{{article.title}}</h3>
    <h5 class="card-panel articleBody">{{body}}</h5>
</div>

<div class="row">
    <div class="col s2"></div>
    <form action="/comment/{{article._id}}" method="POST" class="card-panel col s8">
        <h5>Comment on this Article</h5>
        <div class="row">
            <div class="input-field">
                <i class="material-icons prefix">perm_identity</i>
                <input type="text" name="name" placeholder="Name" id="icon_prexfix" class="validate active">
            </div>

            <div class="input-field">
                <i class="material-icons prefix">comment</i>
                <input type="text" name="comment" placeholder="Comment" id="icon_telephone" class="validate active">
            </div>


        </div>
        <div class="row">
            <div class="input-field">
                <center><input type="submit" class="btn add-comment-button topnav" value="Submit"></center>
            </div>
        </div>
    </form>
</div>

<div class="row">
    <div class="col s2"></div>
    <div class="col s8">
        <h5>Comment:</h5>
        {{#if article.comment}}
        {{#each article.comment}}
        <div class="card">
            <p id="nameComment">{{name}}</p>
            <p>{{body}}</p>
        </div>
        {{/each}}
        {{else}}
        <p>No Comments Yet.</p>
        {{/if}}
    </div>
</div>